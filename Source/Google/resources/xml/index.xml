<sui elementheight="50px">
	<container title="Google" icon="Icon32Edit" stylesheet="SUIContainerNoBorder">		
		<layoutbox type="vertical" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
			<panel size="*">
				<tabview>
					<tab label="Analytics" selected="true">							
						<layoutbox type="vertical" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
							<panel size="*">
								<listview tag="forms" width="100%" height="100%">
									<column tag="id" />		
									<column tag="title" label="Title" width="200px" visible="true" />								
									<column tag="emailto" label="Recipient" width="200px" visible="true" />									
								</listview>
							</panel>
							<panel size="100px">
								<layoutbox type="horizontal" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
									<panel size="*">
										<button tag="formcreate" width="100%" label="Create" disabled="false"/>
										<button tag="formedit" width="100%" label="Edit" disabled="true"/>
										<button tag="formdelete" width="100%" label="Delete" disabled="true"/>
									</panel>
								</layoutbox>				
							</panel>
						</layoutbox>												
					</tab>	
					<tab label="Settings">
						<layoutbox type="horizontal">			
							<panel size="200px">
								<layoutbox type="vertical">
									<panel size="100px">
										<label text="Urchin code"/>
									</panel>					
									<panel size="*">
										<textarea tag="urchincode" width="100%" height="100%">
											<codemirror lineNumbers="true" textWrapping="false" enterMode="keep" />
										</textarea>		
									</panel>					
								</layoutbox>
							</panel>												
							<panel size="%elementheight%">
								<layoutbox type="vertical">
									<panel size="100px">
										<label text="Placeholder Tag"/>
									</panel>					
									<panel size="*">
										<textbox tag="title" width="100%" />
									</panel>					
								</layoutbox>
							</panel>
						</layoutbox>												
					</tab>
				</tabview>
			</panel>
		</layoutbox>				
	</container>
</sui>


